<UserControl x:Class="ErikEJ.SqlCeToolbox.Controls.RoundedTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
            <Border  CornerRadius="5" >
            <Border.Background>
                <LinearGradientBrush EndPoint="0,75" StartPoint="0,0" MappingMode="Absolute">
                    <GradientStop Color="#FF6E6E6E" Offset="0"/>
                    <GradientStop Color="#FFFFFFFF" Offset="0.1"/>
                </LinearGradientBrush>
            </Border.Background>
            <TextBox Name="TheTextBox" MinWidth="30" Background="Transparent" BorderBrush="Transparent"  />
        </Border>
    </Grid>
</UserControl>
